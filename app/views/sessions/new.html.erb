<h1>Log In</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Log In" %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to "Sign up", signup_path %></p>