<h1>Create a New Team</h1>

<%= form_with model: @team, local: true do |f| %>
  <% if @team.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>
      <ul>
        <% @team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <div class="field">
    <%= f.label :player_ids, "Select Players" %>
    <%= f.collection_select :player_ids, Player.all, :id, :name, {}, { multiple: true, class: "select-multiple" } %>
    <small>Hold Ctrl (or Cmd on Mac) to select multiple players</small>
  </div>

  <div class="actions">
    <%= f.submit "Create Team" %>
  </div>
<% end %>

<%= link_to "Back to Teams", teams_path %>