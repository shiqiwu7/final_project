<h1>Edit Event</h1>

<%= form_with model: @event, local: true do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5 %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.datetime_local_field :start_date, required: true %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.datetime_local_field :end_date, required: true %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update Event" %>
  </div>
<% end %>

<%= link_to "Back to Event", event_path(@event) %>